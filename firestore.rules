rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow users to read any user's public data
      allow read: if request.auth != null;
      // Allow users to write to their own document only
      allow write: if request.auth.uid == userId || isAdmin();
    }

    match /barbers/{barberId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /appointments/{appointmentId} {
      allow read: if isAdmin() || request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.barberId;
      allow create: if request.auth.uid == request.resource.data.clientId;
      allow update: if isAdmin() || request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.barberId;
      allow delete: if isAdmin();
    }
  }
}